#!/usr/bin/bash

git0149="/home/fabian/00_projects-SAP-ALLIANCE/00-SAP-HANA-HA/git-0.149/SAPHana"

files=$(find * -maxdepth 0 \! -name binaries -type f)

for file in $files; do
    printf "file %s: " "$file"
    fullFile=$(find $git0149 -type f -name $file)
    if [ -n "$fullFile" ]; then
       diff -q $fullFile $file 1>/dev/null 2>/dev/null && msg="OK" || msg="DIFF"
    else
       msg="missing upstream (git0149)"
    fi
    printf "%s\n" "$msg"
done 
