we_are_primary() {

   # node_status=$(su - ${sidadm} -c "hdbnsutil -sr_state" 2>/dev/null | awk '/mode/ {print $2}')
   # TODO: Change stderr location!!
   # TODO: Fix hdbnsutil location
   # TODO: Fix user sidadm
   #sidadm=lnxadm
   node_status=$(we_are_primary_single) 
   ocf_log info "we_are_primary: node_status=$node_status"
   case "$node_status" in
       primary ) 
                  return $HANA_STATE_PRIMARY;;
       syncmem )
                  return $HANA_STATE_SECONDARY;;
       none )     # have seen that mode on second side BEFEORE we registered it as replica
                  return $HANA_STATE_DEFECT;;
       * )
		  ocf_log err "we_are_primary:  we didn't expect node_status to be: <$node_status>"
                  ocf_log err "we_are_primary: trying multiple times to get primary status"
                  for i in 1 2 3 4 5; do
                      node_status=$(we_are_primary_single)
                      ocf_log info "we_are_primary: (loop nr $i) node_status=$node_status"
                      case "$node_status" in
                           primary )
                                     return $HANA_STATE_PRIMARY;;
                           syncmem* | sync* | async* )
                                     # TODO: instead of wildcards we should be sharper, but need to check for possible strings 
                                     return $HANA_STATE_SECONDARY;;
                      esac
                      sleep 10
                  done
		  # sync and async seen in the hdbnsutil help -- need to know how to handle them
                  return $HANA_STATE_DEFECT;;
   esac;
   return $HANA_STATE_DEFECT
}

#
# saphana_start_clone
#
saphana_start_clone() {
# TODO: fh - NOT ERS any more
  # saphana_init $OCF_RESKEY_ERS_InstanceName
  #notifies=$(env | grep meta_notify)
  #for notify in $notifies; do
  #	  ocf_log info ">> NOTIFY VALUE: $notify <<"
  #done
  ocf_log info ">> NOTIFY VALUE: OCF_RESKEY_CRM_meta_notify_master_uname=${OCF_RESKEY_CRM_meta_notify_master_uname} <<"
  saphana_init $OCF_RESKEY_InstanceName
# TODO: fh - when to check, if this is master already?
#  ${HA_SBIN_DIR}/crm_master -v 50 -l reboot
#      logger -t fhLOG "crm_master with: $OCF_RESOURCE_INSTANCE -v 50 -l reboot"
  ocf_log info "fhDBG set attribute master_hana_${sid} for node $(hostname) to DEMOTED"
  crm_attribute -N $(hostname) -v DEMOTED  -n "master_hana_${sid}" -l forever
  we_are_primary; primary_status=$?
  if [ $primary_status -eq $HANA_STATE_PRIMARY ]; then
     #
     # we will be a master (primary) so checking, if the other nor primary
     #
     # TODO: Maybe this will NOT work for scale-out only for scale-up (1:1)
     Master_Nodes=$(echo $OCF_RESKEY_CRM_meta_notify_master_uname | tr -d "" )
     if [ -n "$Master_Nodes" ]; then
        if [ "$Master_Nodes" != "$(hostname)" ]; then
           ocf_log warn "!!!!!!!!!!! Master_Nodes=\"$Master_Nodes\" !!!!!!!!!!!!!"
	   ocf_log err  "!!!!!!!!!!! SAPHana MUST never be primary-primary !!!!!!!!!!!!!"
	   return $OCF_ERR_GENERIC
        fi
     fi
      
  fi 
  saphana_start
  return $?
}


