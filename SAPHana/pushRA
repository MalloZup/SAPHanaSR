
nodes="fscs98.wdf.sap.corp fscs99.wdf.sap.corp"
files="SAPHana SAPHanaTopology"
dir="/usr/lib/ocf/resource.d/suse"

for clN in ${nodes}; do
    echo "== $clN =="
    for file in ${files}; do
        echo "-- $file --"
        scp ${file} root@${clN}:${dir}/${file}.stage
        ssh root@${clN} "mv ${dir}/${file}.stage ${dir}/${file}"
        ssh root@${clN} "grep '<version>.*</version>' ${dir}/${file}" 
    done
done
